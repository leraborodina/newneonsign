<Window x:Class="NeonSignWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeonSignWPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="600" Width="800"
        Background="#EBF7F9">
    <Grid>
        <StackPanel Height="100" VerticalAlignment="Top">
            <TextBlock Width="auto" FontSize="30" Margin="30" Text="Добро пожаловать, админ!"></TextBlock>
        </StackPanel>
        <StackPanel x:Name="MainPanel" Width="700" Height="480" VerticalAlignment="Bottom" Margin="50,105,50,0">
            <StackPanel Orientation="Horizontal" Width="700" Height="380"/>
            <StackPanel VerticalAlignment="Bottom" Orientation="Vertical" Width="700" Height="100">
                <Button x:Name="LogOutButton" Width="200" Height="40" Margin="30" Content="Выйти" FontSize="20" VerticalAlignment="Bottom" HorizontalAlignment="Center" Click="LogOut_btn_Click"/>
            </StackPanel>
        </StackPanel>
        <Frame x:Name="AdminFrame" Width="800" Navigated="AdminFrame_Navigated" Margin="0,0,0,99"/>
    </Grid>
</Window>
   
