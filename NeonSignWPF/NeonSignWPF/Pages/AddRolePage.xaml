<Page x:Class="NeonSignWPF.Pages.AddRolePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NeonSignWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddRolePage">

    <Grid>
        <StackPanel Height="280" Width="700" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,90,0,0">
            <TextBlock Margin="15" FontSize="35">Введите новую роль</TextBlock>
            <TextBox Text="{Binding role}" x:Name="TextRole" HorizontalAlignment="Left" Margin="15" Width="400" Height="45" FontSize="35" Foreground="Black"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="70" Width="700">
            <Button x:Name="Conf_Button" Content="Сохранить роль" Margin="10" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Click="Conf_Button_Click"></Button>
            <Button x:Name="BackButton" Content="Назад" Margin="10" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Click="BackButton_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
